<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@drawable/tree">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:id="@+id/l1"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/return1"
            />
        <EditText
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/main_edit_search"
            android:layout_marginLeft="50dp"
            android:hint="搜索"
            android:editable="false"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/grid"
            android:id="@+id/main_image_change"
            android:layout_marginLeft="70dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/l1"
        android:id="@+id/l2"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:text="综合"
            android:background="@null"
            android:id="@+id/main_btn_multiple"
            android:layout_gravity="center_vertical"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:text="销量"
            android:background="@null"
            android:id="@+id/main_btn_sale"
            android:layout_gravity="center_vertical"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:text="价格"
            android:background="@null"
            android:id="@+id/main_btn_price"
            android:layout_gravity="center_vertical"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:text="筛选"
            android:background="@null"
            android:id="@+id/main_btn_choose"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/l2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/main_xRecyclerview"
        ></com.jcodecraeer.xrecyclerview.XRecyclerView>

</android.support.constraint.ConstraintLayout>